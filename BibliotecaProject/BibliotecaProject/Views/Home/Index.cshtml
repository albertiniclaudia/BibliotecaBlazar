@{

    ViewData["Title"] = "Home Page";

}
<div>
    
    <div class="text-center mx-auto bg-success p-2 text-dark bg-opacity-50 " style="width: 50%; height: 50%; margin-top: 5%; margin-bottom: 5%;">

        <div class="card text-center border border-success p-2 mb-2 border-opacity-25 ">

            <div class="card-header bg-success p-2 text-dark bg-opacity-25 ">
                <h1>ACCEDI</h1>
            </div>

            <div class="card-body">
                <div class="mb-3 row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control-plaintext" id="staticEmail" placeholder="email@example.com">
                    </div>
                </div>
                <div class="mb-3 row ">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10 ">
                        <input type="password" class="form-control" id="inputPassword">
                    </div>
                </div>

                <div class="button">
                    <button type="submit" class="btn btn-outline-success">Accedi</button>
                </div>
            </div>

        </div>

    </div>
</div>
